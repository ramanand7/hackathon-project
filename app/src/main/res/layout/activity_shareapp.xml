<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#121010"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="279dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/claay" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="300dp"
            android:layout_height="50dp"

            android:fontFamily="cursive"
            android:gravity="center"
            android:text="share App"
            android:textColor="#E62B2B"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="238dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="20dp"

            android:fontFamily="cursive"
            android:gravity="center"
            android:text="Take Note Anytime Anywhere"
            android:textColor="#C8B435"
            android:textSize="30sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/sharetextt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/n"
            android:textColor="#F2CDC9C9"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/sharebutton"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="?attr/colorControlActivated"
            android:drawableRight="@android:drawable/ic_menu_set_as"
            android:gravity="start"
            android:text="share App"
            android:textAllCaps="true"
            android:textColor="#EEF8EF"
            android:textSize="35sp"
            android:textStyle="bold|italic" />
    </LinearLayout>
</LinearLayout>